@model IEnumerable<Car>
@{
    ViewData["Title"] = "Index";
}

<h1>Cars Data</h1>
<hr/>
<div class="text-end" >
    <a asp-action="Add" asp-controller="Cars" class="btn btn-primary">
        <i class="bi bi-file-plus"></i>
        &nbsp; Add New Car
        </a>
    </div>
    <hr/>
    <hr/>
    @foreach(var car in Model)
    {
    <div class="grid-container">
        <div>
            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">@car.Name</div>
                <div class="card-body">
                    <h4 class="card-title">@car.Name</h4>
                    <p class="card-text"> The car is created in @car.year</p>
                    <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn-sm btn-success">
                        <i class="bi bi-pencil"></i>
                    </a>
                    &nbsp; &nbsp; &nbsp;
                    <a asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id"  class="btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
            </div>
        </div>
        </div>
    
    }
    

